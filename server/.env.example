# Backend environment variables
# Copy this file to `.env` and fill in real values. Do NOT commit `.env`.

# Server port
PORT=5000

# MongoDB connection string
# Format: mongodb+srv://<username>:<password>@cluster0.b9xgohh.mongodb.net/<database-name>?appName=Cluster0
# Example: mongodb+srv://nextgen_admin:admin123@cluster0.b9xgohh.mongodb.net/nextgen-db?appName=Cluster0
MONGO_URI=

# JWT secret and expiration (e.g., 7d, 1d)
# Generate a random secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=
JWT_EXPIRES=7d

# Email account used to send messages (SMTP sender)
EMAIL_USER=
# Gmail App Password or SMTP password (no spaces!)
EMAIL_PASS=

# Optional: Email service provider for nodemailer (defaults to gmail)
# Examples: gmail, outlook365, yahoo. You can also configure a custom transporter instead.
EMAIL_SERVICE=gmail

# Where to receive messages
RECEIVER_EMAIL=

# Optional: Public app URL used in email links/buttons
# Example (Vite default): http://localhost:5173
APP_URL=http://localhost:5173
